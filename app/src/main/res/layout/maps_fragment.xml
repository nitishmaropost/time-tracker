<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/tools">


    <!-- MAIN CONTENT -->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>

    <android.support.v7.widget.CardView
            android:id="@+id/destCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/lnrPickup"
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="15dp"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/greenball"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickup from"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/txtPickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Address"
                            android:layout_marginTop="2dp"
                            android:singleLine="true"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                    android:id="@+id/lnrDrop"
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="match_parent"
                    android:background="#e2e2e2"
                    android:padding="15dp"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/destball"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical">
                    <TextView
                            android:id="@+id/txtDropAt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drop at"
                            android:visibility="gone"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/txtDrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/transparent"
                            android:hint="Enter drop location"
                            android:singleLine="true"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
            android:id="@+id/btnRideNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:padding="15dp"
            android:visibility="invisible"
            android:text="Ride Now"/>

</FrameLayout>