<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- MAIN CONTENT -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.truizlop.fabreveallayout.FABRevealLayout
        android:id="@+id/fab_reveal_layout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/_180sdp">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorWhite"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/ic_phone_white_24dp"
            android:layout_alignParentEnd="true"/>


        <RelativeLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorWhite">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/txtCancelRide">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"                        android:layout_toStartOf="@id/view"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manjeet Singh"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Scorpio"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="PB01 C 1095"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:background="@color/navigation_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toEndOf="@id/view"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_40sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_phone_black_24dp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="Call"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical|start"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_share_alt"
                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Share Details"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical|start"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/txtCancelRide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel Ride"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorRed"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/rectangle"
                    android:padding="@dimen/_12sdp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondary_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/txtEmergencyCall"
                android:layout_centerInParent="true"
                android:src="@drawable/sos_bell"/>


            <TextView
                android:id="@+id/txtEmergencyCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Call"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorRed"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rectangle"
                android:padding="@dimen/_12sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"/>

        </RelativeLayout>

    </com.truizlop.fabreveallayout.FABRevealLayout>


    <ImageView
        android:id="@+id/img_loc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_above="@id/fab_reveal_layout"
        android:background="@drawable/circle_location"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_my_location_black_24dp"/>


</RelativeLayout>